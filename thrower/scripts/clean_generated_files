#!/bin/bash

source $(dirname "${BASH_SOURCE[0]}")/commons

function clean_autotools_generated_files() {
rm -rf \
aclocal.m4 \
autom4te.cache \
config.log \
config.status \
configure \
depcomp \
install-sh \
Makefile \
Makefile.in \
missing \
autoscan.log \
config.guess \
config.sub
}

function clean_poco_root_generated_files() {
rm -rf \
config.make \
lib
}

function clean_poco_generated_files() {
rm -rf \
.dep \
bin \
obj
}

function clean_src() {
rm -rf *.cc \
*.cpp \
*.h
}

function clean_all() {
rm -rf *
}

cd $1

if [ "$2" == "generated_build_files" ] ; then
	make clean
	clean_autotools_generated_files
elif [ "$2" == "src" ] ; then
  clean_src
elif [ "$2" == "poco_root" ] ; then
	clean_poco_root_generated_files
elif [ "$2" == "poco" ] ; then
	clean_poco_generated_files
elif [ "$2" == "all" ] ; then
	clean_all
fi
